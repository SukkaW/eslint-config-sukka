{
  "plugins": ["@stylistic/migrate"],
  "overrides": [
    {
      "files": ["packages/**/*.ts"],
      "extends": ["sukka/node", "sukka/typescript"],
      "rules": {
        "@stylistic/migrate/rules": "error",
        "camelcase": "off"
      }
    },
    {
      "files": ["packages/**/*.js"],
      "extends": ["sukka/node"],
      "rules": {
        "@stylistic/migrate/rules": "error"
      }
    }
  ],
  "ignorePatterns": [
    "packages/*/dist/**/*"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}
