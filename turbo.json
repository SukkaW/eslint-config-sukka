{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    "eslint.config.js"
  ],
  "tasks": {
    "codegen": {
      "dependsOn": [
        "^codegen"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "cache": false
    },
    "eslint-config-sukka#build": {
      "dependsOn": [
        "eslint-config-sukka#codegen"
      ]
    }
  }
}
