{
  "$schema": "https://v2-8-0.turborepo.dev/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    "eslint.config.js"
  ],
  "tasks": {
    "codegen": {
      "dependsOn": [
        "^codegen"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "cache": false
    },
    "eslint-config-sukka#codegen": {
      "dependsOn": [
        "@eslint-sukka/shared#build",
        "@eslint-sukka/eslint-plugin-sukka-full#build",
        "@eslint-sukka/eslint-plugin-stylistic#build"
      ]
    },
    "eslint-config-sukka#build": {
      "dependsOn": [
        "eslint-config-sukka#codegen",
        "@eslint-sukka/react#build"
      ]
    },
    "//#lint:root": {
      "dependsOn": [
        "eslint-config-sukka#build"
      ]
    }
  }
}
