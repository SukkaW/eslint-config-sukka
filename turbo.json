{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    "eslint.config.js"
  ],
  "tasks": {
    "codegen": {
      "dependsOn": [
        "^codegen"
      ]
    },
    "build": {
      "dependsOn": [
        "^codegen",
        "^build"
      ]
    },
    "test": {
      "cache": false
    },
    "@eslint-sukka/ts#codegen": {
      "dependsOn": [
        "@eslint-sukka/js#build"
      ]
    }
  }
}
