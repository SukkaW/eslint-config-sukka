{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ESNext"
    ],
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "./packages/**/*.ts",
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/fixtures/**/*",
    "./packages/*/dist/**/*"
  ]
}
